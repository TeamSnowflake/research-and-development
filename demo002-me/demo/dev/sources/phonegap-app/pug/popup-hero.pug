extends layout/layout
block content
    .view
        .view-header.view-header-blue
            .view-nav
                a(href="#"): em.mdi.mdi-arrow-left.icon-left
                a(href="#"): em.mdi.mdi-account-outline.icon-right
            .view-title Ask
            .view-subtitle Fill in details of your request

        .view-content
            .form
                .form-group
                    label.form-label DESCRIPTION
                    input(type="text" placeholder="Description Here").form-control
                .form-group
                    label.form-label AMOUNT
                    input(type="text" placeholder="Fill in Amount").form-control

        .view-footer
            a(href="#").button.button-success.button-wide MAKE REQUEST

    .popup
        .popup-backdrop
        .popup-content: .popup-content-inner
            .popup-content-header
                .popup-title Aanmelden
                .popup-subtitle Wacht op bevestiging
                .popup-close Sluit
            .popup-content-body
                .popup-hero
                    .popup-hero-label Voornaam
                    .popup-hero-value Jamall
                .popup-heading.text-center 
                    | Gemeente Zuidhorn heeft uw
                    br 
                    | informatie gecorrigeerd
            .popup-content-footer: .row
                .col.col-2: a(href="#").button.button-dim.button-wide AFWIJZEN
                .col.col-2: a(href="#").button.button-success.button-wide ACCEPTEN

