.view-content
    .hero
        .hero-title {{ $ctrl.params.amount }} {{ $ctrl.params.token.name }}
        .hero-subtitle Zenden
.view-footer
    a(ng-click="$ctrl.send()").button.button-success.button-wide BEVESTIG

.popup(ng-if="$ctrl.showSuccess")
    .popup-backdrop(ui-sref="wallet-tokens")
    .popup-content: .popup-content-inner
        .popup-content-header
            .popup-title Aanmelden
            .popup-subtitle Wacht op bevestiging
            .popup-close(ui-sref="wallet-tokens") Sluit
        .popup-content-body
            .popup-icon: img(src="assets/img/icon-popup-success.png").popup-icon-img
            .popup-heading.text-center Geslaagd!
            .popup-text.text-center Uw gegevens zijn succesvol verwerkt
        .popup-footer
            .button.button-success.button-wide(ui-sref="wallet-tokens") OK