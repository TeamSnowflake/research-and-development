.popups
    .popup.popup-forus-auth
        .popup-backdrop
        .popup-inner: .popup-content
            .popup-content-aside
                .download-app
                    .download-app-title De app wordt momenteel alleen uitgeven via Android
                    .download-app-btn
                        .mdi.mdi-google-play
                        | Download it from
                        br
                        strong PLAY MARKET

            // step 1
            .popup-content-main(ng-if="auth.step == 1")
                .content-title Inloggen StemApp panel
                .section.section-forus-qr-code
                    .title Scan de QR-code met de Forus
                    .qr-code#auth_qr
                    .text U kunt tot 14:55 uur (Nederlandse tijd) inloggen. Daarna verloopt uw sessie.
                    .links  
                        a(href="#")
                            | » 
                            span Lorem ipsum dolor sit amet, consectetur adipisicing elit
                        a(href="#") 
                            | » 
                            span Eiusmod tempor incididunt ut labore et dolore magna aliqua
                        a(href="#") 
                            | » 
                            span Laboris nisi ut aliquip ex ea commodo consequat.

            // step 2
            .popup-content-main(ng-if="auth.step == 2")
                .content-title Inloggen bij Lorem ipsum dolor sit amet
                .section.section-share-info
                    div(progress).progress: .mdi.mdi-qrcode-scan
                    .list
                        .list-title Waiting for your information:
                        .list-item.active 
                            em.mdi.mdi-check
                            | Personal data
                        .list-item 
                            em.mdi.mdi-check
                            | Relations
                        .list-item 
                            em.mdi.mdi-check
                            | ... 

                    .footer-info
                        | Please accept sharing this information in your 
                        span Me App

            // step 2
            .popup-content-main(ng-if="auth.step == 3")
                .section.section-share-success
                    .message
                        div(progress).progress: .mdi.mdi-check
                        .progress-title You successfully logged in
                

            a(href="#" ng-click="auth.closeModals($event)").popup-close.mdi.mdi-close
    
    div(ng-repeat="modal in $root.modals.modals() track by $index" popup-modal modal="modal")